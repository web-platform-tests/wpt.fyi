{
  "extends": [
    "config:base",
    ":automergeMinor",
    ":automergeLinters",
    ":automergeTypes"
  ],
  "enabledManagers": ["gomod", "npm"],
  "gomod": {
    "major": {
      "enabled": false
    },
    "ignoreDeps": ["google.golang.org/genproto"],
    "postUpdateOptions": ["gomodTidy"]
  },
  "npm": {
    "postUpdateOptions": ["npmDedupe"]
  },
  "packageRules": [
    {
      "groupName": "Browser Logos",
      "packagePatterns": ["^@browser-logos/"]
    }
  ]
}
