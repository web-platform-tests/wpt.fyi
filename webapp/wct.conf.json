{
  "suites": [
    "components/test/*.html"
  ],
  "plugins": {
    "local": {
      "skipSeleniumInstall": true,
      "browserOptions": {
        "chrome": [
          "headless",
          "disable-gpu",
          "no-sandbox",
          "disable-features=ScriptStreaming"
        ],
        "firefox": [
          "-headless"
        ]
      }
    }
  },
  "compile": "never",
  "npm": true,
  "expanded": true,
  "verbose": true,
  "testTimeout": 300000
}
